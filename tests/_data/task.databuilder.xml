<?xml version="1.0"?>
<transfers
    xmlns="spryker:databuilder-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:databuilder-01 http://static.spryker.com/databuilder-01.xsd"
>

    <transfer name="Task">
        <property name="title" dataBuilderRule="sentence(2)"/>
        <property name="description" dataBuilderRule="sentence(2)"/>
        <property name="dueDate" dataBuilderRule="date('Y-m-d', 'tomorrow')"/>
        <property name="status" dataBuilderRule="randomElement(['to_do','in_progress','completed','overdue'])"/>
    </transfer>

</transfers>
