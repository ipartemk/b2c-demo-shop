<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="RestTaskAttributes">
        <property name="idTask" type="int"/>
        <property name="fkCreator" type="int"/>
        <property name="fkAssignee" type="int"/>
        <property name="title" type="string"/>
        <property name="description" type="string"/>
        <property name="dueDate" type="string"/>
        <property name="status" type="string"/>
        <property name="tags" type="TaskTag[]" singular="tag"/>
    </transfer>

    <transfer name="TaskCollectionResponse">
        <property name="tasks" type="TaskCollection"/>
        <property name="isSuccessful" type="bool"/>
        <property name="messages" type="Message[]" singular="message"/>
    </transfer>

    <transfer name="TaskResponse">
        <property name="task" type="Task"/>
        <property name="isSuccessful" type="bool"/>
        <property name="messages" type="Message[]" singular="message"/>
    </transfer>

    <transfer name="RestTaskAssignAttributes">
        <property name="email" type="string"/>
        <property name="task" type="RestTaskAttributes"/>
    </transfer>

    <transfer name="RestTaskTagAttributes">
        <property name="tag" type="string"/>
        <property name="task" type="RestTaskAttributes"/>
    </transfer>

    <transfer name="RestTaskAssignRequest">
        <property name="idTask" type="int"/>
        <property name="email" type="string"/>
    </transfer>

    <transfer name="RestTaskTagRequest">
        <property name="idTask" type="int"/>
        <property name="tag" type="string"/>
    </transfer>

</transfers>
