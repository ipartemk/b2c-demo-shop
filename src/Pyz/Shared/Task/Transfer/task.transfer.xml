<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Task">
        <property name="idTask" type="int"/>
        <property name="fkCreator" type="int"/>
        <property name="fkAssignee" type="int"/>
        <property name="title" type="string"/>
        <property name="description" type="string"/>
        <property name="dueDate" type="string"/>
        <property name="status" type="string"/>
        <property name="tags" type="TaskTag[]" singular="tag"/>
    </transfer>

    <transfer name="TaskTag">
        <property name="idTaskTag" type="int"/>
        <property name="tag" type="string"/>
    </transfer>

    <transfer name="TaskCriteria" strict="true">
        <property name="taskConditions" type="TaskConditions"/>
        <property name="pagination" type="Pagination"/>
    </transfer>

    <transfer name="TaskConditions" strict="true">
        <property name="idTask" type="int"/>
        <property name="taskIds" type="int[]" singular="idTask"/>
        <property name="isOverdue" type="bool"/>
        <property name="title" type="string"/>
        <property name="description" type="string"/>
        <property name="tag" type="string"/>
    </transfer>

    <transfer name="TaskCollection" strict="true">
        <property name="tasks" type="Task[]" singular="Task"/>
        <property name="pagination" type="Pagination"/>
    </transfer>

</transfers>
